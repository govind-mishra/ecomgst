{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "outDir": "./dist",
        "rootDir": "./", // Compile files from the root directory
        "strict": true,
        "esModuleInterop": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "*.ts"
    ], // Compile all TypeScript files in the root directory
    "exclude": [
        "node_modules"
    ]
}